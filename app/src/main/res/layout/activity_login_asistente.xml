<!-- activity_login_dentista.xml -->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_Asistente"
    android:background="#e0f6f9">

    <ImageView
        android:id="@+id/imageViewAsistente"
        android:layout_width="137dp"
        android:layout_height="153dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="137dp"
        android:layout_marginTop="169dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="408dp"
        android:src="@drawable/asistente" />

    <EditText
        android:id="@+id/editTextUsernameAsistente"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="67dp"
        android:layout_marginTop="345dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="341dp"
        android:hint="@string/nombre_de_usuario_"
        android:minHeight="48dp"
        android:textColor="#001944"/>

    <EditText
        android:id="@+id/editTextPasswordAsistente"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="67dp"
        android:layout_marginTop="403dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="283dp"
        android:hint="@string/contrase_a_"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textColor="#001944"/>

    <Button
        android:id="@+id/buttonLoginAsistente"
        android:layout_width="156dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="127dp"
        android:layout_marginTop="497dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="174dp"
        android:backgroundTint="#026165"
        android:onClick="loginAsistente"
        android:text="@string/iniciar_sesi_n_"
        android:textColor="#FFFFFF"/>

</RelativeLayout>
