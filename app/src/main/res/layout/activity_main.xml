<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#95D1DA">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="131dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="433dp"
        android:text="@string/seleccione_su_rol"
        android:textColor="#001944"
        android:textSize="18sp" />

    <Button
        android:id="@+id/buttonDentista"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="222dp"
        android:layout_marginBottom="257dp"
        android:backgroundTint="#026165"
        android:onClick="selectRole"
        android:text="@string/dentista"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buttonAsistente"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="237dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="256dp"
        android:backgroundTint="#026165"
        android:onClick="selectRole"
        android:text="@string/asistente"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="83dp"
        android:layout_height="81dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="87dp"
        android:layout_marginEnd="241dp"
        android:layout_marginBottom="303dp"
        app:srcCompat="@drawable/dentista" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="86dp"
        android:layout_height="78dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="263dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="304dp"
        app:srcCompat="@drawable/asistente"/>

    <androidx.cardview.widget.CardView
        android:layout_width="292dp"
        android:layout_height="233dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="494dp"
        app:cardCornerRadius="50dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/doc" />
    </androidx.cardview.widget.CardView>


</RelativeLayout>
