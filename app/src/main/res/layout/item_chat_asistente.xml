<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_margin="8dp">

    <LinearLayout
        android:id="@+id/bubbleLayoutAsistente"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:background="#E4DADA"
        android:orientation="vertical"
        android:padding="8dp">


        <TextView
            android:id="@+id/textViewMensajeAsistente"
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:text="@string/mensaje_del_asistente"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bubbleLayoutDentista"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="55dp">

        <TextView
            android:id="@+id/textViewMensajeDentista"
            android:layout_width="171dp"
            android:layout_height="47dp"
            android:background="@color/purple_200"
            android:text="@string/mensaje_dentista"
            android:textColor="@android:color/black"
            android:textSize="16sp" />


    </LinearLayout>

</RelativeLayout>